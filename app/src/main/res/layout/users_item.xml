<?xml version="1.0" encoding="utf-8"?>





<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:id="@+id/user_item"
android:layout_width="match_parent"
android:layout_height="72dp"
android:layout_gravity="center"
android:orientation="horizontal"
android:clickable="true">
<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:id="@+id/imagesss"
    android:translationX="1dp"
    >

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/user_item_image"
        android:layout_width="51dp"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_gravity="center_vertical"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="12dp"
        android:layout_marginTop="5dp"
        android:scaleType="centerCrop" />
</LinearLayout>

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="0.5dp"
    android:elevation="0.5dp"
    android:layout_toRightOf="@id/imagesss"
    android:background="@color/windowBackground">

    <TextView
        android:id="@+id/user_item_fio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:gravity="center_vertical"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="16dp"
        android:layout_alignParentTop="true"
        android:text="11111111111111aaaa"
        android:fontFamily="sans-serif-medium"
        android:textSize="16sp"
        android:layout_alignParentLeft="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:id="@+id/user_item_location"
        android:layout_below="@+id/user_item_fio"
        android:text="Odessa,UK"
        android:layout_marginBottom="15dp"
        android:gravity="center_vertical"
        android:fontFamily="sans-serif"
        android:textSize="14sp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="16dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/user_item_fio"
        android:layout_marginTop="7dp"
        app:srcCompat="@drawable/ic_chevron_right_black_24dp"
        android:layout_marginRight="16dp"
        android:layout_alignParentRight="true" />

</RelativeLayout>

</RelativeLayout>

